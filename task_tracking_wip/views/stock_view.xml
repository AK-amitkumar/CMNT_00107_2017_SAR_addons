<?xml version="1.0" encoding="utf-8"?>
<odoo>


        <record id="stock_view_move_picking_form_add_task" model="ir.ui.view">
            <field name="name">stock_view_move_picking_form_add_task</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_picking_form"/>
            <field name="arch" type="xml">
                <field name="location_dest_id" position="after">
                    <field name="task_id"/>
                    <field name="project_wip_id"/>
                </field>
            </field>
        </record>

        <record id="stock_view_move_picking_tree_add_task" model="ir.ui.view">
            <field name="name">stock_view_move_picking_tree_add_task</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_picking_tree"/>
            <field name="arch" type="xml">
                <field name="state" position="after">
                    <field name="task_id"/>
                </field>
            </field>
        </record>

</odoo>
