<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


    <record id="view_production_lot_form_grammage" model="ir.ui.view">
        <field name="name">stock.production.lot.form.grammage</field>
        <field name="model">stock.production.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="arch" type="xml">
            <field name="ref" position="after">
                <field name="width"/>
                 <field name="grammage"/>
            </field>
        </field>
    </record>

    <record id="view_stock_quant_form_grammage" model="ir.ui.view">
        <field name="name">stock.quant.form.grammage</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_form"/>
        <field name="arch" type="xml">
            <field name="inventory_value" position="after">
                <field name="weight"/>
            </field>
        </field>
    </record>

    </data>
</odoo>